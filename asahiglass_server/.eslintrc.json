{
   
    "env": {
        "node": true
    },
    "extends": [ "eslint:recommended" ],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-cond-assign": [
            "error", "always"
        ]
   
    }
}